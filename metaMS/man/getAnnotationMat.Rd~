\examples{
##---- Should be DIRECTLY executable !! ----
##-- ==>  Define data, use random,
##--	or do  help(data=index)  for the standard data sets.

## The function is currently defined as
function (exp.nist, pspectra, annotations, plotIt = FALSE, verbose = FALSE) 
{
    allAnnotations <- sort(unique(unlist(annotations$annotations)))
    allAnnotations <- c(allAnnotations[allAnnotations > 0], rev(allAnnotations[allAnnotations < 
        0]))
    result <- matrix(0, length(allAnnotations), length(exp.nist))
    colnames(result) <- names(exp.nist)
    pspec.names <- sapply(pspectra, function(x) x$Name)
    oldWarn <- options("warn")$warn
    options(warn = 2)
    for (j in seq(along = allAnnotations)) {
        if (verbose) 
            cat("\nWorking on annotation", allAnnotations[j])
        hits <- which(sapply(annotations$annotations, function(x) allAnnotations[j] \%in\% 
            unlist(x)))
        hit.ids <- sapply(annotations$annotations, function(x) which(sapply(x, 
            function(y) length(y) > 0 && allAnnotations[j] \%in\% 
                y)))
        if (allAnnotations[j] < 0) {
            patname <- paste("Unknown", abs(allAnnotations[j]))
            idx <- which(pspec.names == patname)
            refpat <- pspectra[[idx]]$pspectrum
        }
        else {
            patname <- pspectra[[j]]$Name
            refpat <- pspectra[[j]]$pspectrum
        }
        if (verbose) 
            cat(" - ", patname)
        for (k in hits) {
            pat <- exp.nist[[k]][[hit.ids[[k]][1]]]
            if (verbose) 
                cat("\n\tHit", k)
            if (plotIt) {
                plot(refpat[, 1], 100 * refpat[, 2]/max(refpat[, 
                  2]), xlab = "m/z", ylab = "I (normalized)", 
                  type = "h", col = 2, lwd = 2, main = patname)
                points(pat[, 1], 100 * pat[, 2]/max(pat[, 2]), 
                  type = "h", col = 4)
                legend("topleft", legend = c("Reference", names(exp.nist)[k]), 
                  lwd = c(2, 1), col = c(2, 4), bty = "n")
                readline("Hit return to continue...")
            }
            result[j, k] <- relInt(pat, refpat)
            if (verbose) 
                cat("- relative Intensity", result[j, k])
        }
    }
    options(warn = oldWarn)
    result
  }
}
